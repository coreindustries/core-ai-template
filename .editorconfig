# EditorConfig - Cross-IDE consistency
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# Python
[*.py]
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

# Markdown (trailing whitespace is intentional for line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# XML / HTML
[*.{xml,html,htm}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Docker
[Dockerfile*]
indent_size = 4

# Environment files
[.env*]
insert_final_newline = true
